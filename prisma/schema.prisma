generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String        @id @default(uuid())
  username    String
  email       String        @unique
  password    String
  role        Role
  Submissions Submissions[]
}

enum Role {
  admin
  user
}

model category {
  id        String     @id @default(uuid())
  name      String
  questions question[]
}

model question {
  id         String     @id @default(uuid())
  question   String
  answer     String
  image      String
  difficulty Difficulty
  categoryid String
  category   category   @relation(fields: [categoryid], references: [id])
  quiz       quiz[]
}

enum Difficulty {
  easy
  medium
  hard
}

model quiz {
  id          String        @id @default(uuid())
  live        Boolean
  difficulty  Difficulty
  question    question[]
  Submissions Submissions[]
}

model Submissions {
  id       String  @id @default(uuid())
  live     Boolean @default(false)
  score    Int
  maxscore Int
  quizid   String
  userid   String
  quiz     quiz    @relation(fields: [quizid], references: [id])
  user     user    @relation(fields: [userid], references: [id])
}
